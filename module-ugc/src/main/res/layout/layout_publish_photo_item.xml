<?xml version="1.0" encoding="utf-8"?>
<cn.skyui.module.ugc.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:clipChildren="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_2"
        android:layout_marginTop="@dimen/space_2"
        android:background="@drawable/common_circle_trans_bg_40dp"
        android:padding="@dimen/space_5"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_close_black_24dp" />

</cn.skyui.module.ugc.widget.SquareRelativeLayout>


