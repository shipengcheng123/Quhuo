<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/text_balance"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/text_balance_label"
            android:text="100"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_25"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_balance_label"
            android:layout_centerInParent="true"
            android:text="当前可兑换金币"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_50"
        android:id="@+id/btn_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/common_btn_weixin_bg_selector"
        android:paddingLeft="@dimen/space_50"
        android:paddingRight="@dimen/space_50"
        android:text="兑换收益"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>